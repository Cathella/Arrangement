<div class="container">
  <p id="notice"><%= notice %></p>

  <h3 class="mt-5 mb-3">Problems</h3>

  <table class="table">
    <thead>
      <tr>
        <th>Description</th>
        <th>Category</th>
        <th>Solution</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @problems.each do |problem| %>
        <tr>
          <td><%= problem.description %></td>
          <td><%= problem.category %></td>
          <td><%= problem.solution %></td>
          <td><%= link_to 'Show', problem %></td>
          <td><%= link_to 'Edit', edit_problem_path(problem) %></td>
          <td><%= link_to 'Destroy', problem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Problem', new_problem_path, :class => "custom-button" %>

</div>
